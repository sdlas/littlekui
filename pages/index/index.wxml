<view class="backanimation" style="position:fixed;top:{{windowHeight/2-rad}}px;left:{{windowWidth/2-rad}}px;width:{{rad*2}}px;height:{{rad*2}}px;border-radius:{{rad*2}}px;z-index:0;{{rippleStyle}};{{turnleftStyle}}" wx:if="{{stack<=1}}"></view>
<view wx:if="{{stack==1}}" class="fang" style="position:fixed;top:{{windowHeight/2-rad-4}}px;left:{{windowWidth/2-rad-4}}px;width:{{rad*2}}px;height:{{rad*2}}px;border-radius:{{rad*2}}px;z-index:11;{{turnleftStyle}};"></view>
<view wx:if="{{stack==2}}">
  <view class="chatbuble" style="z-index:11;{{chatStyle}}">{{chatmessage}}</view>
  <view class="chatbuble2" style="z-index:11;"></view>
  <view class="chatbuble3" style="z-index:11;"></view>
  <view class="floatname" style="z-index:11;">小葵</view>
</view>
<view class="container" style="height:{{windowHeight}}px;width:{{windowWidth}}px;">
  <view wx:if="{{stack==0}}" style="z-index:10;">
    <view class="startbtn" bindtap="start">开始使用</view>
  </view>
  <view wx:if="{{stack==1}}" style="z-index:10;">
  <view class="loadingbtn" style="{{turnleftStyle}}">
    <view class="textbox" style="font-size:{{!twoline?'20px':'20px'}};line-height:{{!twoline?'60px':'30px'}};{{showStyle}};">{{loadingmessage}}</view>
  </view>
  </view>
  <view wx:if="{{stack==2}}">
    <scroll-view stroll-y="true" style="height:{{windowHeight}}px;width:{{windowWitdh}}px">
      <view class="truecontainer" style="height:{{windowHeight}}px;width:{{windowWidth}}px;">
        <image class="avatar" src="../images/avatar.jpg" style="z-index:2" bindtap="sendData"></image>
        <view class="greenland"></view>
        <view class="infobox" style="z-index:0;height:{{windowHeight-145}}px;">
          <view class="tabbox">
            <view class="bar" bindtap="changebar" data-id="1" style="background-color:{{currenttab==1?'greenyellow':''}};border-top-right-radius:10px;">检测轨迹</view>
            <view class="bar" bindtap="changebar" data-id="2" style="background-color:{{currenttab==2?'greenyellow':''}};">当前光强</view>
            <view class="bar" bindtap="changebar" data-id="3" style="background-color:{{currenttab==3?'greenyellow':''}};border-top-left-radius:10px;">日光强记录</view>
          </view>
          <view hidden="{{myCanvas}}" class="canvasbox">
            <canvas  canvas-id="myCanvas" style="height:300px;width:300px"/>
          </view>
          <form bindsubmit="formsubmit" wx:if="{{currenttab==1}}">
            <view class="degbox">
              <input placeholder="水平倾角 {{degx}}°" placeholder-style="color:greenyellow;text-align:center;" name="deg1" class="inputstyle"></input>
              <input placeholder="竖直倾角{{degy}}°" placeholder-style="color:greenyellow;text-align:center;" name="deg2" class="inputstyle"></input>
            </view>
            <button class="startlistern" bindtap="beginlisten">开始检测轨迹</button>
          </form>
          <view class="lightnum" wx:if="{{currenttab==2}}">紫外线强度为：1000</view>
        </view>
      </view>
    </scroll-view>
  </view>
</view>
